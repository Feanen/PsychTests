<local:BaseWindow x:Class="PsychTestsMilitary.ViewModels.UserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PsychTestsMilitary.ViewModels"
        xmlns:services="clr-namespace:PsychTestsMilitary.Services"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        MouseLeftButtonDown="WindowMouseLeftButtonDown"
        Style="{DynamicResource CustomWindowStyle}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="600" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CustomStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Style="{StaticResource CustomGridBackgroundStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Style="{StaticResource WindowPanelStyle}">
            <Button Style="{StaticResource WindowPanelButtonsStyle}" Click="MinimizeButtonClicked">
                <Image Style="{StaticResource MinimizeWindowImage}"/>
            </Button>
            <Button Style="{StaticResource WindowPanelButtonsStyle}" Click="MaximizeButtonClicked">
                <Image Style="{StaticResource MaximizeWindowImage}"/>
            </Button>
            <Button Style="{StaticResource WindowPanelButtonsStyle}" Click="CloseButtonClicked">
                <Image Style="{StaticResource CloseWindowImage}"/>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0 20 0 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Style="{StaticResource CustomLabel}" Content="Оберіть тести" HorizontalAlignment="Left"/>
                <Label Grid.Column="1" Grid.Row="0" Style="{StaticResource CustomLabel}" FontSize="13" Content="asdfdsasdf" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Background="Transparent" BorderThickness="0">
                    <Button.Content>
                        <Image Source="/Resources/Images/Arrows/Vector1.png"/>
                    </Button.Content>
                </Button>
                <Border Grid.Column="1" Style="{StaticResource CustomBorderStyle}">
                    <StackPanel x:Name="stackPanel">
                        <Grid Name="grid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <CheckBox Name="checkBox0" Grid.Row="0" Grid.Column="0" Style="{StaticResource PsychologistCheckBox}" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                            <TextBlock Name="textBlock1" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="9" Style="{StaticResource RegistrationTextBlockStyle}"/>


                            <CheckBox Name="checkBox1" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Style="{StaticResource PsychologistCheckBox}" VerticalAlignment="Center"></CheckBox>
                            <TextBlock Name="textBlock2" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="9" Style="{StaticResource RegistrationTextBlockStyle}"/>


                            <CheckBox Name="checkBox2" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" Style="{StaticResource PsychologistCheckBox}" VerticalAlignment="Center"></CheckBox>
                            <TextBlock Name="textBlock3" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="9" Style="{StaticResource RegistrationTextBlockStyle}"/>


                            <CheckBox Name="checkBox3" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" Style="{StaticResource PsychologistCheckBox}" VerticalAlignment="Center"></CheckBox>
                            <TextBlock Name="textBlock4" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="9" Style="{StaticResource RegistrationTextBlockStyle}"/>


                            <CheckBox Name="checkBox4" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" Style="{StaticResource PsychologistCheckBox}" VerticalAlignment="Center"></CheckBox>
                            <TextBlock Name="textBlock5" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="9" Style="{StaticResource RegistrationTextBlockStyle}"/>

                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                        </Grid>
                        <Button Grid.Row="1" Grid.Column="1" Name="beginButton" Content="Розпочати тести" Click="BeginButtonClicked" Style="{StaticResource CustomRoundedButtonStyle}"/>

                    </StackPanel>
                </Border>
            </Grid>
            
        </StackPanel>
    </Grid>
</local:BaseWindow>
