<Window x:Class="PsychTestsMilitary.ViewModels.PsychologistWndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PsychTestsMilitary.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Вікно психолога" Height="600" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CustomStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Style="{StaticResource CustomGridBackgroundStyle}">
        <Border Style="{StaticResource CustomBorderStyle}" VerticalAlignment="Top">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Content="Введіть прізвище: " Grid.Column="0" Grid.Row="0" Style="{StaticResource FinalResultsLabelStyle}"/>
                    <TextBox Name="text" Grid.Column="1" Grid.Row="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="14" TextChanged="TextChanged" Background="White" GotFocus="FocusOn"/>
                    <Label Content="Результати: " Grid.Column="0" Grid.Row="2" Style="{StaticResource FinalResultsLabelStyle}"/>
                    <DataGrid Name="data" Grid.Row="3" Grid.ColumnSpan="2" AutoGenerateColumns="False" VerticalScrollBarVisibility="Auto" Height="300" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Методика" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Дата проходження" Binding="{Binding Answers.Date}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Canvas Grid.Row="1" Grid.Column="1">
                        <ListBox Name="dropList" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="14" Height="Auto" MaxHeight="200" Background="White" SelectionChanged="DropListSelected" Width="{Binding ActualWidth, ElementName=text}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Canvas>
                </Grid>
                <Grid Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Content="На головну" Grid.Column="0" Grid.Row="0" FontSize="20" FontFamily="Times New Roman" HorizontalAlignment="Center" VerticalAlignment="Top" Name="back" Click="ButtonClicked"/>
                    <Button Content="Очистити" Grid.Column="1" Grid.Row="0" FontSize="20" FontFamily="Times New Roman" HorizontalAlignment="Center" VerticalAlignment="Top" Name="clear" Click="ButtonClicked"/>
                    <Button Content="Результати" Grid.Column="2" Grid.Row="0" FontSize="20" FontFamily="Times New Roman" HorizontalAlignment="Center" VerticalAlignment="Top" Name="showResults" Click="ButtonClicked"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
